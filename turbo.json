{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"],
			"env": [
				"CONVEX_DEPLOY_KEY",
				"NEXT_PUBLIC_CONVEX_URL",
				"NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
				"NEXT_PUBLIC_CLERK_FRONTEND_API_URL",
				"NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
				"CLERK_SECRET_KEY",
				"CLERK_USER_WEBHOOK_SECRET",
				"CLERK_BILLING_WEBHOOK_SECRET",
				"CLERK_ISSUER_DOMAIN",
				"BOLDSIGN_API_KEY",
				"BOLDSIGN_WEBHOOK_SECRET",
				"OPENAI_API_KEY",
				"UNSPLASH_ACCESS_KEY",
				"UNSPLASH_SECRET_KEY",
				"UNSPLASH_APP_ID",
				"RESEND_API_KEY",
				"RESEND_WEBHOOK_SECRET",
				"STRIPE_SECRET_KEY",
				"STRIPE_APPLICATION_FEE_CENTS",
				"NEXT_PUBLIC_POSTHOG_KEY",
				"NEXT_PUBLIC_POSTHOG_HOST",
				"MAPBOX_API_KEY",
				"NEXT_PUBLIC_MAPBOX_API_KEY"
			]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"dependsOn": ["^build"]
		},
		"test": {
			"dependsOn": ["^build"]
		},
		"test:once": {
			"dependsOn": ["^build"],
			"cache": false,
			"outputLogs": "full"
		},
		"test:coverage": {
			"dependsOn": ["^build"],
			"cache": false,
			"outputLogs": "full",
			"outputs": ["coverage/**"]
		}
	}
}
