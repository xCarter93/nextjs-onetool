{
  "expo": {
    "name": "OneTool",
    "slug": "onetool-mobile",
    "version": "1.0.0",
    "scheme": "onetool",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "platforms": ["ios"],
    "ios": {
      "bundleIdentifier": "com.onetool.app",
      "supportsTablet": true
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-font",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#ffffff",
          "image": "./assets/splash.png",
          "imageWidth": 200
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "autolinkingModuleResolution": true
    }
  }
}

